import { describe, it, expect } from 'vitest';
import { render, screen } from '@testing-library/react';
import '@testing-library/jest-dom';
import React from 'react';
import { MemoryRouter } from 'react-router-dom';
import AppRoutes from './index.jsx';

describe('AppRoutes component', () => {
  it('renders the Header component', () => {
    render(
      <MemoryRouter>
        <AppRoutes />
      </MemoryRouter>
    );
    expect(screen.getByRole('banner')).toBeInTheDocument();
  });

  it('renders the Home component for the root path', async () => {
    render(
      <MemoryRouter initialEntries={['/']}>
        <AppRoutes />
      </MemoryRouter>
    );
    expect(await screen.findByText('Home Page Content')).toBeInTheDocument();
  });

  it('renders the CharacterDetail component for the character detail path', async () => {
    render(
      <MemoryRouter initialEntries={['/character/1']}>
        <AppRoutes />
      </MemoryRouter>
    );
    expect(await screen.findByText('Character Detail Content')).toBeInTheDocument();
  });

  it('displays loading text while loading components', () => {
    render(
      <MemoryRouter>
        <AppRoutes />
      </MemoryRouter>
    );
    expect(screen.getByText('Loading...')).toBeInTheDocument();
  });

  it('renders the app-content div', () => {
    render(
      <MemoryRouter>
        <AppRoutes />
      </MemoryRouter>
    );
    expect(screen.getByRole('main')).toHaveClass('app-content');
  });
});